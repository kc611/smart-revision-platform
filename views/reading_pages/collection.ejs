<div class="flex flex-wrap h-full w-screen overflow-none p-20">
    <div class="bg-white shadow-md rounded-3xl p-5 w-5/6 m-auto mt-12">
        
            <p class="text-4xl font-bold text-gray-700 w-100 text-center mt-6">Questions</p>
        
        
        <div>

            <% for (var i=0; i < curr_info.num_questions; i++) {%>

            <div class="border-solid border-4 m-8 p-8">
                <p class="text-xl font-bold text-gray-400">Question <%= i+1 %>.</p>
                <p class="text-xl font-bold mx-2"><%= curr_sugg[i].question %></h2>
                <div class="flex space-between m-2">

                    <div class="w-3/5">
                        <p class="text-xl font-bold">Explaination :</p>
                        <p class="mx-2 text-xl">Correct Answer: <%= curr_sugg[i].answer %></p>
                        <p class="mx-2 text-lg"><%= curr_sugg[i].explaination %></p>
                    </div>
                    <div class="mx-auto">

                        <div class="text-blue-600 text-lg m-2" onclick="show_pdf_data('<%= curr_sugg[i].question_number %>','1')">
                            View Suggestions 1 >>>>
                        </div>
                        <div class="text-blue-600 text-lg m-2" onclick="show_pdf_data('<%= curr_sugg[i].question_number %>','2')">
                            View Suggestions 2 >>>>
                        </div>
                        <div class="text-blue-600 text-lg m-2" onclick="show_pdf_data('<%= curr_sugg[i].question_number %>','3')">
                            View Suggestions 3 >>>>
                        </div>

                        
                    </div>
                </div>
            </div>

            <% } %>

        </div>
    </div>
</div>

