<body>
  <script src="/static/FontAwesome.js"></script>
  <link rel="stylesheet" href="/static/login_page_style.css" />
  <script src="/static/sweetalert.min.js"></script>
  <div class="container" style="max-width: inherit;">
    <div class="forms-container">
      <div class="signin-signup">
        <form action="/users/login" method="POST" class="sign-in-form">
          <h2 class="title">Sign in</h2>
          <div class="input-field">
            <i class="fas fa-user"></i>
            <input type="text" placeholder="Username" name="username"/>
          </div>
          <div class="input-field">
            <i class="fas fa-lock"></i>
            <input type="password" placeholder="Password" name="password"/>
          </div>
          <input type="submit" value="Login" class="btn solid" />
        </form>
        <form action="/users/register" method="POST" class="sign-up-form">
          <h2 class="title">Sign up</h2>
          <div class="input-field">
            <i class="fas fa-user"></i>
            <input type="text" placeholder="Username" name="username"/>
          </div>
          <div class="input-field">
            <i class="fas fa-lock"></i>
            <input type="password" placeholder="Password" name="password"/>
          </div>
          <div class="input-field">
            <i class="fas fa-id-card"></i>
            <input list="organizations" placeholder="Organization" pattern="<%= resp_data.org_pattern %>" name="organization"/>
            <datalist id="organizations">
              <% for (var i=0; i < resp_data.org_list.length; i++) {%>
                <option value="<%= resp_data.org_list[i] %>">
              <% } %>
            </datalist>
          </div>
          <input type="submit" class="btn" value="Sign up" />
        </form>
      </div>
    </div>

    <div class="panels-container">
      <div class="panel left-panel">
        <div class="content">
          <h3>New here ?</h3>
          <p>
            Make a account and register yourself with an organization, and you'll be good to go, Cheers!
          </p>
          <button class="btn transparent" id="sign-up-btn">
            Sign up
          </button>
        </div>
        <img src="/assets/login_user.svg" class="image" alt="" />
      </div>
      <div class="panel right-panel">
        <div class="content">
          <h3>One of us ?</h3>
          <p>
            Login with the credentials provided by your organization and you'll be good to go, Cheers!.
          </p>
          <button class="btn transparent" id="sign-in-btn">
            Sign in
          </button>
        </div>
        <img src="/assets/register_profile.svg" class="image" alt="" />
      </div>
    </div>
  </div>

  
  <script src="/static/login_page_utilities.js"></script>

  <% if(error && error.length > 0) { %>
    <script>
        swal("Error: <%= error %>",{
          buttons: false,
        });
    </script> 
    <style>
      .swal-overlay {
        background-color: transparent;
      }
      .swal-modal {
        /* border: 1px solid black; */
        box-shadow: 0 0 6px rgb(255 73 55);
        border-radius: 25px;
        vertical-align: top;
        /* background-color: rgb(233, 103, 109); */
      }
      .swal-text:first-child {
      margin-top: 20px;
      }
      .swal-text:last-child {
      margin-bottom: 20px;
      }
    </style>
  <% } %>

  <% if(success && success.length > 0) { %>
    <script>
        swal("Success: <%= success %>",{
          buttons: false,
        });
    </script> 
    <style>
      .swal-overlay {
        background-color: transparent;
      }
      .swal-modal {
        /* border: 1px solid black; */
        box-shadow: 0 0 6px rgb(55 255 55);
        border-radius: 25px;
        vertical-align: top;
        /* background-color: rgb(233, 103, 109); */
      }
      .swal-text:first-child {
      margin-top: 20px;
      }
      .swal-text:last-child {
      margin-bottom: 20px;
      }
    </style>
  <% } %>

  <% if(resp_data.sign_up) { %>
    <script>
      container.classList.add("sign-up-mode");
    </script>
  <% } %>
    
  
  
</body>